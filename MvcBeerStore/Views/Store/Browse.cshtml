@model MvcBeerStore.Models.Style
 
@{
    ViewBag.Title = "Browse Albums";
}
 
<div class="genre">
    <h3><em>@Model.Name</em> Styles</h3>
 
    <ul id="album-list">
        @foreach (var beer in Model.Beers)
        {
            <li>
                <a href="@Url.Action("Details", new { id = beer.BeerId })">
                    <img alt="@beer.Name" 
                        src="@beer.BeerArtUrl" />
                    <span>@beer.Name</span>
                </a>
            </li>
        }
    </ul>
</div>