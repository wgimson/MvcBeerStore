@model MvcBeerStore.Models.Beer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Beer</legend>

        @Html.HiddenFor(model => model.BeerId)

        <div class="editor-label">
            @Html.LabelFor(model => model.StyleId, "Style")
        </div>
        <div class="editor-field">
            @Html.DropDownList("StyleId", String.Empty)
            @Html.ValidationMessageFor(model => model.StyleId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BreweryId, "Brewery")
        </div>
        <div class="editor-field">
            @Html.DropDownList("BreweryId", String.Empty)
            @Html.ValidationMessageFor(model => model.BreweryId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BeerArtUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BeerArtUrl)
            @Html.ValidationMessageFor(model => model.BeerArtUrl)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
